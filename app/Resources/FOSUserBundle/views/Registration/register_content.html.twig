{% trans_default_domain 'FOSUserBundle' %}

<div class="top-content">
            <div class="inner-bg">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-2 text">
                            <div class="description">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-sm-offset-3 form-box">
                            <div class="form-top">
                                <div class="form-top-left">
                                    <h3>Registati</h3>
                                </div>
                                <div class="form-top-right">
                                    <i class="fa fa-user"></i>
                                </div>
                            </div>
                            <div class="form-bottom">

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'login-form'}}) }}

<div class="form-group">
{{ form_row(form.username,{'attr': {'class': 'form-username form-control','placeholder': 'Nome...'|trans},'label': false}) }}
</div>
<div class="form-group">
{{ form_row(form.email,{ 'attr': {'class': 'form-username form-control','placeholder': 'Mail...'|trans},'label': false}) }}
</div>
<div class="form-group">
{{ form_row(form.plainPassword.first,{'label' : "Password", 'attr': {'class': 'form-password form-control','placeholder': 'Password...'|trans},'label': false}) }} 
</div>
<div class="form-group">
{{ form_row(form.plainPassword.second,{'label' : "Password", 'attr': {'class': 'form-password form-control','placeholder': 'Ripeti mail...'|trans},'label': false}) }}
</div>
  <div class="form-group">
            <input type="submit" id="_submit" class=" col-sm-offset-4  btn btn-xl" name="_submit" value="{{ 'Sign in'|trans }}" />


            <br>

            <a href="{{ path('fos_user_security_login') }}" class="portfolio-link btn btn-registra " data-toggle="modal">Sei registrato? Effettua il login!</a>
                                    </div>
{{ form_end(form) }}



